#clock
  position relative
  width 240px
  height 240px
  margin 20px auto 0 auto
  background url(../../img/clockface.jpg)
  background-size 100%
  list-style none

#sec, #min, #hour
  position absolute
  width 12px
  height 240px
  top -1px
  left 114px

#sec
  background url(../../img/sechand.png)
  background-size 100% 100%
  z-index 3

#min
  background url(../../img/minhand.png)
  background-size 100% 100%
  z-index 2

#hour
  background url(../../img/hourhand.png)
  background-size 100% 100%
  z-index 1